<h1>Create a new song:</h1>

<form action="/songs" method="POST">
  <input type="hidden" name="_method" value="PATCH">
  <label for="song_name">Song Name: </label>
  <input type="text" name="song_name" id="Name" value="<%= @song.name %>"/>
  <label for="artist_name">Artist Name: </label>
  <input type="text" name="artist_name" id="Artist Name" value="<%= @song.artist.name %>"/>

  <%Genre.all.each do |genre|%>
    <input type="checkbox" name="genres[]" id="<%= genre.name%>" value="<%=genre.id%>" <%='checked' if @song.genres.include?(genre) %>><%=genre.name%></input>
  <%end%>
  <input type="submit" name="Save" id="Save" value="Save">
</form>
